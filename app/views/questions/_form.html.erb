<div class="form">
  <%= form_for @question do |f| %>
    <% if @user.errors.any? %>
      <div class="form-errors">
        <ul>
          <% @question.errors.full_messages.each do |messsage| %>
            <li class="form-error-message"><%= message %></li>
          <% end %>
        </ul>
          </div>
    <% end %>

    <div class="form-field">
      <%= f.label :text, 'Вопрос', class: 'form-label' %>
      <%= f.text_field :text, class: 'form-textarea' %>
    </div>

    <% if current_user.present? && current_user == @question.user %>
      <div class="form-field">
        <%= f.label :answer, 'Ответ', class: 'form-label' %>
        <%= f.text_field :answer, class: 'form-textarea' %>
      </div>
    <% end %>

    <div class="form-action">
      <%= f.submit 'Сохранить', class: 'button button-small button-dark' %>
    </div>
  <% end %>
</div>
